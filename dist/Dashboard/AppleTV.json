{
    "name": "Canberra Weather Dashboard",
    "sources": [
        {
            "auth": "none",
            "name": "Weather Source",
            "endpoints": [
                {
                    "id": "weather-source",
                    "url": "https://api.openweathermap.org/data/2.5/weather?q=Canberra&appid=YOUR_API_KEY&units=metric"
                }
            ]
        }
    ],
    "dashboards": [
        {
            "name": "Weather Data",
            "color": "active",
            "source": {
                "endpoint": "weather-source",
                "refresh": 600
            },
            "widgets": [
                {
                    "width": 3,
                    "height": 2,
                    "type": "basic",
                    "source": {
                        "endpoint": "weather-source"
                    },
                    "mapping": {
                        "title": "Weather in Canberra",
                        "subtitle": "Current Conditions",
                        "temperature": "main.temp",
                        "high": "main.temp_max",
                        "low": "main.temp_min",
                        "weather_type": "weather[0].description",
                        "rain": "rain.1h"
                    },
                    "data": {
                        "temperature": {
                            "label": "Current Temperature",
                            "format": "%.1f°C"
                        },
                        "high": {
                            "label": "High",
                            "format": "%.1f°C"
                        },
                        "low": {
                            "label": "Low",
                            "format": "%.1f°C"
                        },
                        "weather_type": {
                            "label": "Weather Type"
                        },
                        "rain": {
                            "label": "Expected Rain",
                            "format": "%.1f mm"
                        }
                    }
                }
            ]
        }
    ]
}
